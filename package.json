{
  "name": "memo",
  "version": "1.1.4",
  "description": "A memo for myself",
  "keywords": [
    "blog"
  ],
  "homepage": "https://github.com/orzyyyy/memo#readme",
  "bugs": {
    "url": "https://github.com/orzyyyy/memo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/orzyyyy/memo"
  },
  "license": "MIT",
  "author": "orzyyyy",
  "scripts": {
    "build": "cross-env BUILD_ENV=netlify npm run build:common",
    "build:analyse": "cross-env BUILD_ENV=analyse npm run build:common",
    "build:common": "npm-run-all build:prepare build:content build:completed",
    "build:completed": "rimraf dist && cp -r _dist dist && rimraf _dist",
    "build:content": "nino koei --output=_dist",
    "build:gh-pages": "cross-env BUILD_ENV=gh-pages npm run build:common",
    "build:prepare": "rimraf _dist",
    "build:private": "cross-env BUILD_ENV=private npm run build:common",
    "clean": "rimraf node_modules _dist package-lock.json",
    "codecov": "cross-env BUILD_ENV=test nino test --codecov",
    "compile:server": "npm run pre:server && tsc -p server",
    "cross-env": "cross-env",
    "d": "npm run compile:server -- --watch",
    "dev": "rimraf dist && nino koei -w -d",
    "go": "pm2 start",
    "lint": "nino eslint",
    "lint-staged": "lint-staged",
    "log": "cross-var git log --graph --pretty=format:\"[%h](http://github.com/orzyyyy/memo/commit/%H) -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset\" --abbrev-commit --date=relative $npm_package_version..HEAD",
    "pre:server": "rimraf bin && mkdir bin && cpr server/resource bin/resource && sh ./scripts/clean-proxy.sh",
    "prettier": "nino prettier",
    "restart": "pm2 restart memo-server",
    "run:server": "node bin",
    "sort": "npx sort-package-json",
    "start": "npm run compile:server && wait-on bin && cross-env BUILD_ENV=dev npm-run-all --parallel run:server dev",
    "test": "cross-env BUILD_ENV=test nino test",
    "tsc": "tsc"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run prettier",
      "npm run lint"
    ],
    "package.json": [
      "npm run sort"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.2",
    "date-fns": "^2.11.0",
    "fs-extra": "^9.0.0",
    "github-markdown-css": "^4.0.0",
    "history": "^5.0.0",
    "marked": "^2.0.0",
    "mini-xmind": "^1.4.2",
    "nino-cli": "^1.3.12",
    "npm-run-all": "^4.1.5",
    "post-compile-webpack-plugin": "^0.1.2",
    "rc-dialog": "^8.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^5.1.2",
    "socket.io-client": "^3.0.5",
    "toml": "^3.0.0",
    "typescript": "^4.1.5",
    "webpack-bundle-analyzer": "^4.1.0"
  },
  "devDependencies": {
    "@koa/router": "^10.0.0",
    "@testing-library/react-hooks": "^5.0.0",
    "@types/blueimp-md5": "^2.7.0",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.5",
    "@types/fetch-mock": "^7.3.2",
    "@types/fs-extra": "^9.0.0",
    "@types/jest": "^26.0.0",
    "@types/koa-router": "^7.4.0",
    "@types/koa-static": "^4.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/marked": "^1.0.0",
    "@types/prettier": "^2.0.0",
    "@types/puppeteer-core": "^5.4.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/request": "^2.48.4",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "blueimp-md5": "^2.12.0",
    "chalk": "^4.0.0",
    "cpr": "^3.0.1",
    "cross-var": "^1.1.0",
    "fetch-mock": "^9.2.1",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-static": "^5.0.0",
    "lint-staged": "^10.0.8",
    "log4js": "^6.1.2",
    "mockdate": "^3.0.2",
    "node-fetch": "^2.6.0",
    "open": "^7.0.3",
    "pm2": "^4.2.3",
    "puppeteer-core": "^6.0.0",
    "rimraf": "^3.0.2",
    "socket.io": "^2.3.0",
    "wait-on": "^5.0.0"
  }
}
