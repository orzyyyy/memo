{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["dom", "es7"],
    "sourceMap": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "../bin"
  },
  "exclude": ["**/__tests__/*"]
}
